<%-include('partials/header.ejs')%>

        <div class="mylib-container">
            <div class="mylib-header container-md">
                <h1>My Library</h1>
                <div id="vertical-rule"></div>
                <div id="mylib-stats" class="row">
                    <div class="mylib-stat col"><h4>Books: </h4><span id="books-count"><%=books.length ? books.length :0%></span></div>
                    <div class="mylib-stat col "><h4 >Authors:</h4> <span id="authors-count"><%=authorsCount ? authorsCount: 0%></span></div>
                    <div class="mylib-stat col"><h4 >Average Rating: </h4><span id="avg-rating"><%=averageRating ? averageRating: 0%></span><svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="#FFDE59" class="bi bi-star-fill" viewBox="0 0 16 16" style="margin-bottom: 3px;">
                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                      </svg></div>
                </div>
            </div>
            <div class="books-display-container">
                <% if(locals.books.length === 0){%>
                    <h1 id="mylib-empty">Your Library is empty,<br /> you can add a Book by searching for It.</h1>
                <%}else{%>
                <div class="container text-center">
                    <% for(let book of books){if(books.indexOf(book)%3===0){%>
                        <%if (books.indexOf(book) !== 0){%>
                        </div><%}%>
                        <div class="row align-items-start mylib-row first-row">
                     <%}%>   
                        <div class="book-item col">
                        <div class="book-rating"><h3><%if (book.rating){%><%=book.rating%><%}else{%>No<%}%> <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="#FFDE59" class="bi bi-star-fill" viewBox="0 0 16 16" style="margin-bottom: 3px;">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                          </svg></h3></div>
                        <a href="/book/<%=book.book_id.id%>"><img src='/assets/images/<%= book.book_id.img_paths%>'>
                            <h3 class="book-title"><%= book.book_id.name%></h3>
                            <h4 class="book-author">by <%= book.book_id.author%></h4></a>
                        </div>
                        
                        <%}%>
                    </div>
                    <%}%>
                  </div>
            </div>
                
        </div>
        
    <%-include('partials/footer.ejs')%>
    </div>
     
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script>

const logoutButton = document.getElementById('logout');
const logoutForm = document.getElementById('logout-form');

logoutButton.addEventListener('click', function(){
logoutForm.submit()});</script>
</html>